
@{
    ViewData["Title"] = "CrearFactura";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>CrearFactura</h1>

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "formfactura" })) { 


<div class="form-row">


	<div class="form-group col-sm-6">
		<label for="Documento">Cliente</label>
		@Html.DropDownList("clientes",null, "", new { htmlAttributes = new { @class = "form-control", @required = "required" } })

	</div>
	<div class="form-group col-sm-6">
		<label for="Nombre">Vendedor</label>
		@Html.DropDownList("Vendedor", null, "", new { htmlAttributes = new { @class = "form-control", @required = "required" } })

	</div>
	</div>

	}


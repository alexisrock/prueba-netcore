
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Vendedores</h1>


<div class="d-flex flex-wrap flex-row">
	<div class="flex-column">
		<a href="@Url.Action("CrearVendedor","Vendedores")" class="btn btn-outline-primary">Vendedor</a>
	</div>
</div>
<br />

<div class="d-flex flex-wrap flex-row">

	<div class="table-responsive">

		<table class="table table-bordered table-striped" id="tblVendedor">
			<thead>
				<tr>

					<th>Nombres</th>
					<th>Cargo</th>
					<th>Estado</th>
					<th>Accion</th>
				</tr>

			</thead>
			<tbody></tbody>

		</table>

	</div>

</div>
<div class="modal fade" id="ModalEditVendedor" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="exampleModalLabel">Editar Cliente</h5>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div class="modal-body">

				<form  id="formVendedoreddit">


					<div class="form-row">

						<input id="editid" type="hidden" />
						<div class="form-group col-sm-6">
							<label for="editNombres">Nombres</label>
							<input id="editNombres" type="text" class="form-control" />

						</div>
						<div class="form-group col-sm-6">
							<label for="editcargo">Apellidos</label>
							<input id="editcargo" type="text" class="form-control" />
						</div>

					</div>
					<div class="form-group ">
						<div class="form-check">
							<label for="editestado" class="form-check-label">Estado</label>
							<input id="editestado" type="checkbox" class="form-check-input" />

						</div>

					</div>
				</form>

			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
				<button class="btn btn-primary" onclick="GuardarCliente()">Guardar</button>
			</div>
		</div>
	</div>
</div>


<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/DataTables-1.10.21/js/jquery.dataTables.js"></script>
<script src="~/lib/DataTables-1.10.21/js/dataTables.bootstrap4.min.js"></script>
<script src="~/js/Vendedorjs.js"></script>